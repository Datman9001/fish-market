/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/
 

.order-enter
  
  transform: translateX(-120%) rotate(0)
  transition 0.5s
  max-height: 0
  padding 0 !important
  &.order-enter-active
    max-height 60px
    transform: translateX(0) rotate(360deg)
     

.order-exit
  transition 0.5s
  transform: translateX(0) rotate(360deg)
  &.order-exit-active
    transform: translateX(120%) rotate(0)
    padding: 0

 
.count-enter
  transition transform 5s
  transform translateX(120%)
  &.count-enter-active
    background: yellow
    transform translateY(0)

.count-exit
  transform translateY(0)
  transition transform .10s
  position absolute
  left 0
  bottom 0
  &.count-exit-active
      transform translateY(-100%) scale(2)